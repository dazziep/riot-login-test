{
  "name": "riot-login-test",
  "version": "1.0.0",
  "description": "A simple login page created by riotjs",
  "main": "index.js",
  "dependencies": {
    "riot": "^2.2.4"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "browser-sync": "^2.9.11",
    "riotcontrol": "0.0.1",
    "chai": "^3.2.0",
    "jquery": "^2.1.4",
    "jshint": "^2.7.0",
    "karma": "^0.13.9",
    "karma-babel-preprocessor": "^5.2.2",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.5.2",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-riot": "^1.0.0",
    "mocha": "^2.3.2",
    "normalize.css": "^3.0.3",
    "phantomjs": "^1.9.18",
    "uglify-js": "^2.4.21"
  },
  "scripts": {
    "watch:riot": "riot -w app/ dist/",
    "serve": "browser-sync start --server --files 'dist/*.js, app/*.html' --startPath app",
    "lint": "jshint . --exclude-path=.gitignore",
    "riot": "riot app dist/app-main.js --type es6",
    "babel": "babel app/*.js ",
    "uglify": "uglifyjs --output dist/app-main.min.js -- dist/app-main.js",
    "test": "karma start",
    "build": "npm run riot && npm run babel && npm run uglify"
  },
  "author": "dazziep",
  "license": "ISC"
}
